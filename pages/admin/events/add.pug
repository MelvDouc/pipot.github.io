extends ../base.pug

block main
  h2 Ajouter un événement
  form(method="POST" action="/admin/ajouter-evenement" enctype="multipart/form-data")
    div.form-text
      label(for="name") Nom de l'événement
      input(type="text" id="name" name="name" maxlength="50" required)
    div.form-text
      label(for="description") Description
      textarea(id="description" name="description" required)
    div.form-group
      label(for="start_date") Date de début
      input(type="datetime-local" id="start_date" name="start_date" required)
    div.form-group
      label(for="end_date") Date de fin
      input(type="datetime-local" id="end_date" name="end_date" required)
    div.form-file
      label(for="image") Image
      input(type="file" id="image" name="image")
    div.form-submit
      button(type="submit") Ajouter